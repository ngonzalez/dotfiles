#! /bin/bash

RED='\033[0;31m'
GREEN='\033[0;32m'
LIGHT_GREY='\033[0;37m'
DARK_GREY='\033[1;30m'
NC='\033[0m' # No Color

dir=$1
ext=$2

if [ -z ${dir} ]; then
    echo "Missing directory parameter. Usage: ~/.fixdir <DIRECTORY> <EXTENSION>"
    exit 1
fi

if [ -z ${ext} ]; then
    echo "Missing extension parameter. Usage: ~/.fixdir <DIRECTORY> <EXTENSION>"
    exit 1
fi

if [ -d ${dir} ]; then
    file=`ls -1a ${dir} | grep -E --color=never ${ext} | head -n1`
    if [ ! -z ${dir}/${file} ]; then
        if [ -f ${dir}/${file} ]; then
            d=`/usr/bin/GetFileInfo -m "${dir}/${file}"`
            /usr/bin/SetFile -d "${d}" "${dir}"
            /usr/bin/SetFile -m "${d}" "${dir}"
            echo -e "${DARK_GREY}${d} ${NC}${LIGHT_GREY}${dir}${NC} ${GREEN}âœ“${NC}"
        fi
    fi
fi

exit 0
