#! /bin/bash

dir=$1

if [ -z "${dir}" ]; then
    echo "Missing directory parameter. Usage: ~/.setfile <DIRECTORY>"
    exit 1
fi

if [ ! -d "${dir}" ]; then
    exit 1
fi

if [[ `ls "${dir}/" | wc -l | bc` -eq 0 ]]; then
    exit 1
fi

d=`/usr/bin/GetFileInfo -m ${dir}`
/usr/bin/SetFile -d "${d}" ${dir}

exit 0
