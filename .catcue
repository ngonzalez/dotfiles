#! /bin/bash

RED='\033[0;31m'
GREEN='\033[0;32m'
LIGHT_GREY='\033[0;37m'
DARK_GREY='\033[1;30m'
NC='\033[0m' # No Color

dir=$1

for i in $(ls ${dir}/* | grep '\.cue' --color=never | sort); do
    file=`cat ${i} | grep "FILE" --color=never | cut -d\" -f2`
    if [ -f "${dir}/${file}" ]; then
        echo -e "${DARK_GREY}${i}${NC} ${GREEN}OK${NC}"
    else
        echo -e "${RED}${dir}: ${file} not found${NC}"
    fi
done

exit 0
