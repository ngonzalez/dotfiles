#! /bin/bash

# Black        0;30     Dark Gray     1;30
# Red          0;31     Light Red     1;31
# Green        0;32     Light Green   1;32
# Brown/Orange 0;33     Yellow        1;33
# Blue         0;34     Light Blue    1;34
# Purple       0;35     Light Purple  1;35
# Cyan         0;36     Light Cyan    1;36
# Light Gray   0;37     White         1;37

RED='\033[0;31m'
GREEN='\033[0;32m'
LIGHT_GREY='\033[0;37m'
DARK_GREY='\033[1;30m'
NC='\033[0m' # No Color

cd $1
currenttime=$(date "+%Y.%m.%d-%H.%M.%S")
ext='\.(wav|aif|aiff|flac|mp3|m4a)'
file1="/tmp/sc1-filecheck-$currenttime"
file2="/tmp/sc2-filecheck-$currenttime"

playlist=`ls | grep -E '^0{2,3}' --colour=never | grep '\.m3u' --colour=never`
if [ $playlist ]; then
    if [ -f $playlist ]; then
        ls -1a | grep -E --colour=never $ext > $file1
        cat $playlist | grep -E $ext --colour=never > $file2
        if [ `diff -i -B --strip-trailing-cr $file1 $file2 | wc -l | bc` != 0 ]; then
          echo -e "${DARK_GREY}$1${NC} ${LIGHT_GREY}$(file $playlist)${NC}"
          echo -e "${RED}$(diff $playlist $file1)${NC}"
        else
          echo -e "${DARK_GREY}$1${NC} ${GREEN}OK${NC}"
        fi
        if [ -f $file1 ]; then
          rm -f $file1
        fi
        if [ -f $file2 ]; then
          rm -f $file2
        fi
    fi
else
    echo -e "${DARK_GREY}$1${NC} ${LIGHT_GREY}M3U: not found${NC}"
fi
