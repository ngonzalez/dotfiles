#! /bin/bash

dir=$1

if [ -z "${dir}" ]; then
    echo "Missing directory parameter. Usage: ~/.fixdir-silent <DIRECTORY>"
    exit 1
fi

if [ ! -d "${dir}" ]; then
    exit 1
fi

if [[ `ls "${dir}/" | wc -l | bc` -eq 0 ]]; then
    exit 1
fi

ext='\.(wav|aif|aiff|flac|mp3|m4a|sfv)'

if [ -d ${dir} ]; then
    file=`ls -1a ${dir} | grep -E --color=never ${ext} | head -n1`
    if [ ! -z ${dir}/${file} ]; then
        if [ -f ${dir}/${file} ]; then
            d=`/usr/bin/GetFileInfo -m "${dir}/${file}"`
            /usr/bin/SetFile -d "${d}" "${dir}"
            /usr/bin/SetFile -m "${d}" "${dir}"
        fi
    fi
fi

exit 0
