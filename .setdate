#! /bin/bash

dir=$1

if [ -z "${dir}" ]; then
    echo "Missing directory parameter. Usage: ~/.setdate <DIRECTORY>"
    exit 1
fi

if [ ! -d "${dir}" ]; then
    exit 1
fi

if [[ `ls "${dir}/" | wc -l | bc` -eq 0 ]]; then
    exit 1
fi

if [ ! -z ${GRP} ]; then
    find "${dir}" -name "*[${GRP}]*COMPLETE*[${GRP}]*" -type f -delete
fi

ls -Ap ${dir}/* | sort | xargs touch
ls -Ap ${dir}/* | sort | xargs -I '{}' ~/.setfile '{}'

exit 0
