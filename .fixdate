#! /bin/bash

RED='\033[0;31m'
GREEN='\033[0;32m'
LIGHT_GREY='\033[0;37m'
DARK_GREY='\033[1;30m'
NC='\033[0m' # No Color

dir=$1
grp="TC"
d=`/usr/bin/GetFileInfo -d "${dir}"`

for i in $(ls -Ap ${dir} | grep -v / | grep -v -e "^\[${grp}\]" | sort); do
    /usr/bin/SetFile -d "${d}" ${dir}/${i}
    /usr/bin/SetFile -m "${d}" ${dir}/${i}
done

/usr/bin/SetFile -d "${d}" "${dir}"
/usr/bin/SetFile -m "${d}" "${dir}"

echo -e "${DARK_GREY}${d} ${NC}${LIGHT_GREY}$1${NC} ${GREEN}âœ“${NC}"

exit 0
